<h1>manufacturers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Devices</th>
    <th colspan="3"></th>
  </tr>

  <% @manufacturers.each do |manufacturer| %>
    <tr>
      <td><%= manufacturer.name %></td>
      <td><%= manufacturer.description %></td>
      <td><%= manufacturer.devices %></td>
      <td><%= link_to 'Show', manufacturer_path(manufacturer) %></td>
      <td><%= link_to 'Edit', edit_manufacturer_path(manufacturer) %></td>
      <td><%= link_to 'Destroy', manufacturer_path(manufacturer),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
