<h1>Phones</h1>

<table>
  <tr>
    <th>Developer</th>
    <th>Manufacturer</th>
    <th>Model</th>
    <th>Description</th>
    <th>Year</th>
    <th>Resolution</th>
    <th>Diagonal</th>
    <th>Screen type</th>
    <th>DPI</th>
    <th>Multitouch</th>
    <th>CPU</th>
    <th>Cores</th>
    <th>Frequency</th>
    <th>GPU</th>
    <th>Inner memory</th>
    <th>Access memory</th>
    <th>RAM</th>
    <th>Camera</th>
    <th>Megapixels</th>
    <th>Photo resolution</th>
    <th>HDR</th>
    <th>Front megapixels</th>
    <th>Video resolution</th>
    <th>FPS</th>
    <th>4K video</th>
    <th>3G</th>
    <th>4G</th>
    <th>WiFi</th>
    <th>Bluetooth</th>
    <th>NFC</th>
    <th>GPS</th>
    <th>Gyroscope</th>
    <th>Accelerometer</th>
    <th>Barometer</th>
    <th>Wireless charge</th>
    <th>Fast charge</th>
    <th>VR</th>
    <th>Battery</th>
    <th>Standby time</th>
    <th>Talk time</th>
    <th>OS</th>
    <th>Color</th>
    <th>Weight</th>
    <th>Dimensions</th>
    <th>Material</th>
    <th>Protection</th>
    <th colspan="3"></th>
  </tr>

  <% @phones.each do |phone| %>
    <tr>
      <td><%= phone.ph_developer %></td>
      <td><%= phone.ph_manufacturer %></td>
      <td><%= phone.ph_model %></td>
      <td><%= phone.ph_description %></td>
      <td><%= phone.ph_year %></td>
      <td><%= phone.ph_resolution %></td>
      <td><%= phone.ph_diagonal %></td>
      <td><%= phone.ph_screen_type %></td>
      <td><%= phone.ph_dpi %></td>
      <td><%= phone.ph_multitouch %></td>
      <td><%= phone.ph_cpu %></td>
      <td><%= phone.ph_cores %></td>
      <td><%= phone.ph_frequency %></td>
      <td><%= phone.ph_gpu %></td>
      <td><%= phone.ph_inner_mem %></td>
      <td><%= phone.ph_access_mem %></td>
      <td><%= phone.ph_ram %></td>
      <td><%= phone.ph_cam %></td>
      <td><%= phone.ph_megapixels %></td>
      <td><%= phone.ph_photo_res %></td>
      <td><%= phone.ph_hdr %></td>
      <td><%= phone.ph_front_megapixels %></td>
      <td><%= phone.ph_video_res %></td>
      <td><%= phone.ph_fps %></td>
      <td><%= phone.ph_four_k_video %></td>
      <td><%= phone.ph_three_g %></td>
      <td><%= phone.ph_four_g %></td>
      <td><%= phone.ph_wifi %></td>
      <td><%= phone.ph_bluetooth %></td>
      <td><%= phone.ph_nfc %></td>
      <td><%= phone.ph_gps %></td>
      <td><%= phone.ph_gyroscope %></td>
      <td><%= phone.ph_accelerometer %></td>
      <td><%= phone.ph_barometer %></td>
      <td><%= phone.ph_wireless_charge %></td>
      <td><%= phone.ph_fast_charge %></td>
      <td><%= phone.ph_vr %></td>
      <td><%= phone.ph_battery %></td>
      <td><%= phone.ph_standby_time %></td>
      <td><%= phone.ph_talk_time %></td>
      <td><%= phone.ph_os %></td>
      <td><%= phone.ph_color %></td>
      <td><%= phone.ph_weight %></td>
      <td><%= phone.ph_dimensions %></td>
      <td><%= phone.ph_material %></td>
      <td><%= phone.ph_protection %></td>
      <td><%= link_to 'Show', phone_path(phone) %></td>
      <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
      <td><%= link_to 'Destroy', phone_path(phone),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>
